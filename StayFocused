var user = readLine("What sites do you want to be on the restricted list?");

var URL = alert(document.URL);

var timeLimit = readInt("What is the meximum amount of hours you can spen on this this website? ");

var exceedsTimeLimit = false;

//Creates a list for the user to determine which sites are to not be used. 
function restrictedListSites (){
	while(true){
		if(exceedsTimeLimit == true){
			console.log("These sites are on the restricted list!: " );
		}else if (exceedsTimeLimit == false){
			console.log("These sites are not on the restricted list!: ");
		}
		if(user == null){
			break;
		}
	}
}

//Creates a list for the user to determine which sites are to be restricted after a certain amount of time.
function restrictedAfterAWhile () {
	if(myTimer >= timeLimit){
		exceedsTimeLimit == true;
	}
	
}


//Displays current time on page.
var currentTime = setInterval(function() {mytimer()}, 1000);
function myTimer() {
	var date = new Date();
	document.getElementById(elementId).innerHTML = date.toLocaleTimeString;
}

